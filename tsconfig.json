{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "lib": [
      "es2015",
      "dom",
      "es6",
      "esnext"
    ],
    "types": [
      "jest",
      "node",
      "lodash",
      "reflect-metadata"
    ],
    "paths": {
      "@lib/*": [
        "src/*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSources": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}