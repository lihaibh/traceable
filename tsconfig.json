{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "lib": [
      "es2015",
      "dom",
      "es6",
      "esnext"
    ],
    "types": [
      "jest",
      "node",
      "lodash",
      "reflect-metadata"
    ],
    "paths": {
      "@lib/*": [
        "src/*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/_*",
  ]
}
